<section class="section" id="main-profile">
  <div class="container">
    <div class="columns">
      {{!-- column profile box --}}
      <div class="column is-one-quarter  centerizeme">
        <img src="{{this.photoURL}}" alt="profile-pic">
        <h2>Hello {{this.username}}</h2>
        <hr>
        <div class="token-coin">
          <p>{{this.tokens}}</p>
        </div>
        <h4 class="is-uppercase">tokens</h4>
        <div class="bottom-buttons-prof">
          <a href="/user/patch-user" class="button is-light" type="button">Update my profile</a>
          <a href="/user/delete-user" class="button is-danger" type="button">Delete my profile</a>
        </div>
      </div>
      {{!-- column profile box --}}
      <div class="column">
        <div class="column is-block">
          <h4 class="is-uppercase">Books Shared</h4>
          <div class="not-yet-carousel">
            {{#each this.publishedBooks as |buk|}}
            <div class="one-book-profile ">
              <img class="round-border-books" src="{{buk.pic}}" alt="picture of book">
              <p>{{buk.title}}</p>
            </div>
            {{/each}}
          </div>
        </div>
        <div class="column is-block">
          <h4 class="is-uppercase">Books Picked</h4>
          <div class="not-yet-carousel">
            {{#each this.pickedBooks as |buk|}}
            <div class="one-book-profile ">
              <img class="round-border-books" src="{{buk.pic}}" alt="picture of book">
              <p>{{buk.title}}</p>
            </div>
            {{/each}}
          </div>
        </div>
      </div>{{!-- end of colum rigth  --}}
    </div>{{!-- end ofcolumsss  --}}

    <div class="columns"> {{!--badges columns --}}
      {{#each this.commentsRec as |comment|}}
      <p>comment</p>
      {{/each}}

      <div>
        <h3>Badges</h3>
        <ul>
          <li>1</li>
          <li>2</li>
          <li>3</li>
          <li>4</li>
        </ul>
      </div>

    </div> {{!--badges columns --}}
  </div>{{!-- end of container  --}}








  </div>{{!-- end of main container --}}
</section>